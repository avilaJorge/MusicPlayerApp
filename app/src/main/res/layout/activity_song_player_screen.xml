<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!--
            Upper navigation bar
     -->

    <include layout="@layout/navigation_bar" />

    <!--
        middle stuff
    -->

    <View
        android:id="@+id/background"
        android:layout_height="0dp"
        android:layout_width="wrap_content"
        android:background="#6eff6701"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        app:layout_constraintBottom_toTopOf="@+id/musicBar"
        />

    <TextView
        android:id="@+id/songTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:textAlignment="center"
        android:text="Song Name"
        android:textSize="50sp"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="@+id/background"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/artistName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="Artist"
        android:textSize="30sp"
        android:textColor="#000000"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@+id/songTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/albumTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="Album"
        android:textSize="30sp"
        android:textColor="#000000"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@+id/artistName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/lastPlayed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="Last Played:"
        android:textSize="40sp"
        android:textColor="#000000"
        android:ellipsize="end"
        app:layout_constraintBottom_toTopOf="@+id/time"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="12:32"
        android:textSize="25sp"
        android:textColor="#000000"
        android:ellipsize="end"
        app:layout_constraintBottom_toTopOf="@+id/dayOfWeek"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/dayOfWeek"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="Monday"
        android:textSize="25sp"
        android:textColor="#000000"
        android:ellipsize="end"
        app:layout_constraintBottom_toTopOf="@+id/date"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="January 5, 2018"
        android:textSize="25sp"
        android:textColor="#000000"
        android:ellipsize="end"
        app:layout_constraintBottom_toTopOf="@+id/location"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />


    <TextView
        android:id="@+id/location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="Geisel"
        android:textAlignment="center"
        android:maxLength="30"
        android:textColor="#000000"
        android:ellipsize="end"
        android:textSize="25sp"
        android:layout_marginBottom="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />






    <!--
        Lower music bar stuff
     -->

    <include layout="@layout/music_bar" />

</android.support.constraint.ConstraintLayout>
